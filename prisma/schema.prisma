generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url = env("DATABASE_URL")
}

model Usuario {
  email String  @id
  nome String
  nickname String
  senha String
  data DateTime
  Jogoscomprados Jogo[]
  avaliacoes Avaliacao[]
}

model Jogo {
    id_jogo Int @id @default(autoincrement())
    nome String @unique
    classificacao String?
    categorias Categoria[]
    tags Tag[]
    compradores Usuario[]
    avaliacoes Avaliacao[]
}

model Tag{
    id_tags Int @id @default(autoincrement())
    desc String
    jogos Jogo[]
}

model Categoria {
    id_categoria Int @id @default(autoincrement())
    nome String
    descricao String?
    jogos Jogo[]
}

model Avaliacao {
    id Int @id @default(autoincrement())
    descricao String
    autor Usuario @relation(fields: [autor_id], references: [email])
    autor_id String
    jogos Jogo @relation(fields: [jogoId], references: [id_jogo])
    jogoId Int
    estrelas Int
}